<!DOCTUPE html>
<html lang="en">

  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Funda robot</title>
    <%=stylesheet_link_tag %w(bootstrap.min application)%>
    <%=javascript_include_tag %w(jquery bootstrap.min application)%>
    <%=yield_content :include%>
  </head>

  <body>
    <div class='page'>
      <div class='container'>
        <h1>Funda robot</h1>
        <div class=''>
          <form id='subscription_form' action='/subscriptions/new' method='post' >
            <%=csrf_token_field%>
            <div class='form-group'>
              <input class='form-control' type='email' name='email' placeholder='My email' />
            </div>
            <div class='form-group'>
              <label for='input_url'>Funda feed URL:</label>
                <input class='form-control' type='url' name='url' id='input_url' placeholder='' value='http://www.funda.nl/koop/amsterdam/' />
            </div>
            <div class='form-group'>
              <label for='input_interval'>Check the URL every </label>
              <select id='input_interval' name='interval' class='form-control'>
                <option value='5min'>5 minutes</option>
                <option value='15min'>15 minutes</option>
                <option value='30min'>30 minutes</option>
                <option selected value='1h'>1 hour</option>
                <option value='24h'>24 hours</option>
              </select>
            </div>
            <div class='form-group'>
              <input type='submit' class='btn btn-block btn-lg btn-primary' value='Yarrrr!' />
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>

</html>
